+#!/bin/sh
+
+IFENSLAVE=/sbin/ifenslave
+IFSTATE=/etc/network/run/ifstate
+
+if [ ! -x $IFENSLAVE ] ; then
+	exit 0
+fi
+
+case "$IF_SLAVES" in
+	"")
+		exit 0
+		;;
+	none)
+		INTERFACES=""
+		;;
+	all)
+		INTERFACES=`grep eth /proc/net/dev|sed 's/\(\ *\)\(eth[^:]*\)\(.*\)/\2/'`
+		;;
+	*)
+		INTERFACES="$IF_SLAVES"
+		;;
+esac
+
+if [ -n "$INTERFACES" ] ; then
+		ifconfig "$IFACE" up
+		for slave in $INTERFACES ; do
+			$IFENSLAVE --detach "$IFACE" "$slave"
+		done
+		ifconfig "$IFACE" down
+fi
